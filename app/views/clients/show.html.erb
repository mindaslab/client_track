<p id="notice"><%= notice %></p>
<article class="client">
	<h1><%= @client.name %></h1>
	<label>Ph:</label><%= @client.ph %><br />
	<label>Email:</label><%= @client.email %><br />
	<p>
	   <label>Address:</label><br />
	  <%= @client.address %>
	</p>

	<p>
	  <label>Description:</label><br />
	  <%= @client.description %>
	</p>


	<%= link_to 'Edit', edit_client_path(@client) %> |
	<%= link_to 'Back', clients_path %> <br />
</article>

<h2>Notes</h2>

<%= form_for([@client, @client.notes.build]) do |f| %>
  <div class="field">
    <%= f.label :content, "Create Note" %><br />
    <%= f.text_area :content, :rows=> 10, :cols=>60 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render @client.notes %>

